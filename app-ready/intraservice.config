[Unit]
Description=IntraService Site

[Service]
WorkingDirectory=/var/www/intraservice
ExecStart=/usr/bin/dotnet /var/www/intraservice/IntraService.dll
Restart=always
# Restart service after 10 seconds if the dotnet service crashes:
RestartSec=10
KillSignal=SIGINT
SyslogIdentifier=IntraService-Web
User=root
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false
Environment=ASPNETCORE_URLS=http://localhost:5001
#SiteName - sites name in IIS 
Environment=DbName={{ db_name }}

[Install]
WantedBy=multi-user.target
